<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <view
        android:id="@+id/row0"
        class="androidx.appcompat.widget.LinearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <view
            android:id="@+id/col0"
            class="androidx.appcompat.widget.LinearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nuevoNombre"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:gravity="center"
                android:ems="10"
                android:hint="escriba su nombre" />
        </view>
    </view>

    <view
        android:id="@+id/puntajesAltosListRow"
        class="androidx.appcompat.widget.LinearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <view
            android:id="@+id/puntajesAltosListCol"
            class="androidx.appcompat.widget.LinearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/guardarPuntajeBtn"
                android:text="Guardar Puntaje"
                android:layout_width="wrap_content"
                android:layout_height="350sp"/>
        </view>
    </view>

</LinearLayout>
